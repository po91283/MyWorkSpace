<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/WindowBlue</item>
        <item name="android:popupMenuStyle">@style/MyPopUp</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">#344345</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/ActionBarBlue</item>
        <item name="android:titleTextStyle">@style/ActionBarText</item>
    </style>
    <style name="ActionBarText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#344345</item>
    </style>
    <style name="MyPopUp" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/ActionBarItemBlue</item>
    </style>
</resources>
